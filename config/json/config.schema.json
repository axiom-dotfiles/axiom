{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Axiom Configuration Schema",
  "type": "object",
  "required": ["Config", "Display", "Appearance", "Bar", "Widget"],
  "properties": {
    "Config": {
      "type": "object",
      "properties": {
        "userName": { "type": "string" },
        "workspaceCount": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10
        },
        "singleMonitor": { "type": "boolean" },
        "customIconOverrides": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "wallpaper": { "type": "string" }
      }
    },
    "Display": {
      "type": "object",
      "properties": {
        "primary": { "type": "string" },
        "resolutionWidth": { "type": "integer" },
        "resolutionHeight": { "type": "integer" },
        "monitors": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "Appearance": {
      "type": "object",
      "properties": {
        "theme": { "type": "string" },
        "darkMode": { "type": "boolean" },
        "borderRadius": { "type": "integer" },
        "borderWidth": { "type": "integer" },
        "screenMargin": { "type": "integer" },
        "fontFamily": { "type": "string" },
        "fontSize": { "type": "integer" },
        "autoThemeSwitch": { "type": "boolean" },
        "allowGeneratedTheme": { "type": "boolean" },
        "workspacePopoutIcons": { "type": "boolean" },
        "animations": { "type": "boolean" },
        "animationDuration": { "type": "integer" }
      }
    },
    "Widget": {
      "type": "object",
      "properties": {
        "height": { "type": "integer" },
        "padding": { "type": "integer" },
        "spacing": { "type": "integer" }
      }
    },
    "Bar": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "enabled", "widgets"],
        "properties": {
          "id": { "type": "string" },
          "primary": { "type": "boolean" },
          "enabled": { "type": "boolean" },
          "display": { "type": "string" },
          "extent": { "type": "integer" },
          "spacing": { "type": "integer" },
          "padding": { "type": "integer" },
          "location": {
            "type": "string",
            "enum": ["Top", "Bottom", "Left", "Right"]
          },
          "autoHide": { "type": "boolean" },
          "widgets": {
            "type": "object",
            "properties": {
              "left": {
                "type": "array",
                "items": { "$ref": "#/definitions/BarWidget" }
              },
              "leftCenter": {
                "type": "array",
                "items": { "$ref": "#/definitions/BarWidget" }
              },
              "center": {
                "type": "array",
                "items": { "$ref": "#/definitions/BarWidget" }
              },
              "rightCenter": {
                "type": "array",
                "items": { "$ref": "#/definitions/BarWidget" }
              },
              "right": {
                "type": "array",
                "items": { "$ref": "#/definitions/BarWidget" }
              }
            }
          }
        }
      }
    },
    "Menu": {
      "type": "object",
      "cardUnit": { "type": "integer" },
      "cardSpacing": { "type": "integer" },
      "cardPadding": { "type": "integer" },
      "cardBorderRadius": { "type": "integer" },
      "cardBorderWidth": { "type": "integer" },
      "views": {
        "type": "array",
        "items": { "type": "string" }
      },
      "properties": {
        "distanceFromWorkspaceContainer": { "type": "integer" },
        "startMenuPinned": { "type": "boolean" }
      }
    },
    "ChatConfig": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "defaultBackend": { "type": "string" },
        "backends": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_]+$": {
              "type": "object",
              "properties": {
                "apiKey": { "type": "string" },
                "defaultModel": { "type": "string" },
                "models": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "ThemeIntegrations": {
      "type": "object",
      "properties": {
        "gtk": { "type": "boolean" },
        "nvim": { "type": "boolean" },
        "vscode": { "type": "boolean" },
        "alacritty": { "type": "boolean" },
        "kitty": { "type": "boolean" },
        "k9s": { "type": "boolean" },
        "cava": { "type": "boolean" }
      }
    }
  },
    "definitions": {
    "BarWidget": {
      "type": "object",
      "required": ["type"],
      "oneOf": [
        { "$ref": "#/definitions/WindowWidget" },
        { "$ref": "#/definitions/MediaWidget" },
        { "$ref": "#/definitions/WorkspacesWidget" },
        { "$ref": "#/definitions/TimeWidget" },
        { "$ref": "#/definitions/TimeJapaneseWidget" },
        { "$ref": "#/definitions/TailscaleWidget" },
        { "$ref": "#/definitions/NetworkWidget" },
        { "$ref": "#/definitions/SystemTrayWidget" },
        { "$ref": "#/definitions/NotificationsWidget" },
        { "$ref": "#/definitions/LogoWidget" }
      ]
    },
    "WindowWidget": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { 
          "const": "Window",
          "description": "Window Title"
        }
      },
      "additionalProperties": false
    },
    "MediaWidget": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { 
          "const": "Media",
          "description": "Media Player"
        }
      },
      "additionalProperties": false
    },
    "WorkspacesWidget": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { 
          "const": "Workspaces",
          "description": "Workspace Switcher"
        }
      },
      "additionalProperties": false
    },
    "TimeWidget": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { 
          "const": "Time",
          "description": "Clock"
        }
      },
      "additionalProperties": false
    },
    "TimeJapaneseWidget": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { 
          "const": "TimeJapanese",
          "description": "Japanese Clock"
        }
      },
      "additionalProperties": false
    },
    "TailscaleWidget": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { 
          "const": "Tailscale",
          "description": "Tailscale Status"
        }
      },
      "additionalProperties": false
    },
    "NetworkWidget": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { 
          "const": "Network",
          "description": "Network Status"
        }
      },
      "additionalProperties": false
    },
    "SystemTrayWidget": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { 
          "const": "SystemTray",
          "description": "System Tray"
        }
      },
      "additionalProperties": false
    },
    "NotificationsWidget": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { 
          "const": "Notifications",
          "description": "Notification Center"
        }
      },
      "additionalProperties": false
    },
    "LogoWidget": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { 
          "const": "Logo",
          "description": "Custom Logo"
        },
        "properties": {
          "type": "object",
          "properties": {
            "icon": { 
              "type": "string",
              "description": "Icon glyph or text",
              "default": "ó°£‡"
            },
            "backgroundColor": { 
              "type": "string",
              "description": "Background color (Theme.* or hex)",
              "default": "Theme.info",
              "examples": ["Theme.info", "Theme.primary", "#FF5733"]
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}
